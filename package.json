{
  "name": "create-ts-lib-gh",
  "version": "0.0.0",
  "description": "Cli to create public typescript libraries hosted on github",
  "keywords": [
    "template",
    "starter",
    "library",
    "typescript"
  ],
  "main": "lib/create-ts-lib-gh.js",
  "types": "lib/create-ts-lib-gh.d.ts",
  "files": [
    "lib",
    "template"
  ],
  "bin": {
    "create-ts-lib-gh": "lib/create-ts-lib-gh.js"
  },
  "author": "glebbash <glebbash@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/glebbash/create-ts-lib-gh"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "eslint --fix 'src/**/*.ts'",
    "prebuild": "rimraf lib",
    "build": "tsc --project tsconfig.build.json",
    "build:docs": "typedoc --out docs src/create-ts-lib-gh.ts",
    "test": "jest --config jest.config.ts --coverage",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@types/ejs": "^3.1.1",
    "@types/jest": "28.1.6",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "28.1.3",
    "jest-config": "28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@inquirer/input": "0.0.17-alpha.0",
    "ejs": "^3.1.8"
  }
}
